<h2>guests</h2>
<table cellspacing='0px'>
	<thead>
	<tr>
		<% for(var attr in Locanda.Models.Guest.attributes){%>
			<% if(attr == 'id') continue;%>
			<th><%= attr%> </th>	 
		<%}%>
		<th>Options</th>
	</tr>
	</thead>
	<tbody>
		<%= $.View('//locanda/views/guest/list',{guests: guests})%>
	</tbody>
</table>
<h2>New guest</h2>
<form>
	<% for(var attr in Locanda.Models.Guest.attributes){ %>
		<% if(attr == 'id') continue;%>
		<div>
			<label><%= attr %> </label><br />
			<input type="text" value="" name="<%= attr %>"/>
		</div>
	<%}%>
	<input type='submit' value='Create'/>
</form>