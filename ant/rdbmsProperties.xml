<project name="rdbms" default="rdbmsConfig" basedir=".">
	<description>Rdbms Properties file</description>
	
	<!-- global configuration
		select only one of these property:
			-hsql
			-mysql 
	-->
	<property name="hsql" value=""/>
       	<!--<property name="mysql" value=""/> -->


	<!-- Common connection driver configuration -->
	<property name="DBmaxActive" value="100"/>
	<property name="DBmaxIdle" value="30"/>
	<property name="DBmaxWait" value="10000"/>
	
	<!-- HyperSql configuration section  -->
	<target name="hsql_PropertySetter" if="hsql">
	  <echo message="Configuring variables for using HSQL rdbms"/>
	  <property name="DBbin.path" value="hsql"/>	
	  <property name="DB.files" value="/tmp/locandaHsql"/>
	  <property name="DBhost" value="${host}"/>
	  <property name="DBport" value="3306"/>
	  <property name="DBusername" value="SA"/>
	  <property name="DBpassword" value=""/>
	  <property name="DBdump.path" value="/tmp/"/>
	  <property name="DBdriverClassName" value="org.hsqldb.jdbcDriver"/>
	  <property name="DBurl" value="jdbc:hsqldb:hsql://localhost/locanda"/>
	</target>

	<!-- MySql configuration section  -->
	<target name="mysql_PropertySetter" if="mysql">
	  <echo message="Configuring variables for using MYSQL rdbms"/>
	  <property name="DBbin.path" location="/usr/bin"/>
	  <property name="DBhost" value="${host}"/>
	  <property name="DBport" value="3306"/>
	  <property name="DBusername" value="admin"/>
	  <property name="DBpassword" value="admin"/>
	  <property name="DBdump.path" value="sql"/>
	  <property name="DBdriverClassName" value="com.mysql.jdbc.Driver"/>
	  <property name="DBurl" value="jdbc:mysql://localhost:3306/locanda"/>
	</target>
	
	

	<target name="rdbmsConfig" depends="hsql_PropertySetter, mysql_PropertySetter">
	  <echo message="	    Bynary Path: ${DBbin.path}"/>
	  <echo message="	    Host: ${DBhost}"/>
	  <echo message="	    Port: ${DBport}"/>
	  <echo message="	    Username: ${DBusername}"/>
	  <echo message="	    Passwd: ${DBpassword}"/>
	  <echo message="	    Dump Path: ${DBdump.path}"/>
	  <echo message="	    Driver: ${DBdriverClassName}"/>
	  <echo message="	    Url: ${DBurl}"/>
	  <echo message="	    Connections"/>
	  <echo message="	     max Active: ${DBmaxActive}"/>
	  <echo message="	     max Idle: ${DBmaxIdle}"/>
	  <echo message="	     max Wait: ${DBmaxWait}"/>
	</target>
	
	
</project>