<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="persistence.mybatis.mappers.FacilityMapper">
    <cache/>
	
    <insert id="insertFacility" parameterType="model.Facility" useGeneratedKeys="true" keyProperty="id">
        INSERT into facility(name,fileName) values (#{name},#{fileName})
    </insert>
	
    <insert id="insertRoomFacility" parameterType="map">
        INSERT into roomFacility(id_room,id_facility) values (#{id_room},#{id_facility})
    </insert>
	
    <insert id="insertRoomTypeFacility" parameterType="map">
        INSERT into roomTypeFacility(id_roomType,id_facility) values (#{id_roomType},#{id_facility})
    </insert>
	
    <insert id="insertStructureFacility" parameterType="map">
        INSERT into structureFacility(id_structure,id_facility) values (#{id_structure},#{id_facility})
    </insert>
    
    
    <select id="findFacilityById" parameterType="int" resultType="model.Facility">
        <include refid="findFacility"/> where id = #{id}        
    </select>
    
    <select id="findStructureFacilityIdsByIdStructure" parameterType="int" resultType="int">
       SELECT DISTINCT id_facility from structureFacility where id_structure = #{id_structure}
    </select>
    
    <select id="findRoomFacilityIdsByIdStructure" parameterType="int" resultType="int">
       SELECT DISTINCT id_facility from roomFacility where id_room IN (SELECT id FROM room WHERE id_structure = #{id_structure})
    </select>
    
     <select id="findRoomTypeFacilityIdsByIdStructure" parameterType="int" resultType="int">
       SELECT DISTINCT id_facility from roomTypeFacility where id_roomType IN (SELECT id FROM roomType WHERE id_structure = #{id_structure})
    </select>
    
    <select id="findRoomFacilityIdsByIdRoom" parameterType="int" resultType="int">
       SELECT DISTINCT id_facility from roomFacility where id_room = #{id_room}
    </select>
    
    <select id="findRoomTypeFacilityIdsByIdRoomType" parameterType="int" resultType="int">
       SELECT DISTINCT id_facility from roomTypeFacility where id_roomType = #{id_roomType}
    </select>
       
    
    <sql id="findFacility">
        SELECT id,name,fileName from facility
    </sql>
    
    <delete id="deleteUploadedFacility" parameterType="int">
        DELETE from uploadedFacility where id = #{id}
    </delete>
    
    <delete id="deleteFacilityFromAllRooms" parameterType="int">
        DELETE from roomFacility where id_uploadedFacility = #{id_uploadedFacility}
    </delete>
    
    <delete id="deleteFacilityFromAllRoomTypes" parameterType="int">
        DELETE from roomTypeFacility where id_uploadedFacility = #{id_uploadedFacility}
    </delete>
    
    <delete id="deleteAllFacilitiesFromRoom" parameterType="int">
        DELETE from roomFacility where id_room = #{id_room}
    </delete>
    
    <delete id="deleteAllFacilitiesFromRoomType" parameterType="int">
        DELETE from roomTypeFacility where id_roomType = #{id_roomType}
    </delete>
    
    <delete id="deleteStructureFacility" parameterType="int">
        DELETE from structureFacility where id = #{id}
    </delete>
    
    <update id="updateUploadedFacility" parameterType="model.Facility">
        UPDATE uploadedFacility set name = #{name} where id = #{id}
    </update>
    
</mapper>