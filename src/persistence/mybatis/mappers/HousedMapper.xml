<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="persistence.mybatis.mappers.HousedMapper">
    <cache/>
    
    <select id="findHousedByIdBooking" parameterType="int" resultType="model.Housed">
        <include refid="selectHoused"/>WHERE id_booking = #{id_booking}
    </select>
    
    <select id="findHousedByIdBookingAndIdGuest" parameterType="map" resultType="model.Housed">
        <include refid="selectHoused"/>WHERE id_booking = #{id_booking} AND id_guest = #{id_guest}
    </select>
    
    <select id="findHousedById" parameterType="int" resultType="model.Housed">
        <include refid="selectHoused"/>WHERE id = #{id}
    </select>
    
    <select id="findAll" resultType="model.Housed">
        <include refid="selectHoused"/> 
    </select>
    
    <sql id="selectHoused">
        SELECT id,id_booking,id_guest,id_housedType,checkInDate,checkOutDate,exported,deleted,idSired FROM housed
    </sql>
    
    <insert id="insertHoused" parameterType="model.Housed" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO housed(id_booking,id_guest,id_housedType,checkInDate,checkOutDate,exported,deleted,idSired) values
        (#{id_booking},#{id_guest},#{id_housedType},#{checkInDate},#{checkOutDate},#{exported},#{deleted},#{idSired})
    </insert>
    
    <update id="updateHoused" parameterType="model.Housed">
        UPDATE housed set
        id_booking= #{id_booking},id_guest= #{id_guest},id_housedType= #{id_housedType},checkInDate= #{checkInDate},checkOutDate=#{checkOutDate},exported=#{exported},deleted=#{deleted},idSired=#{idSired}
        WHERE id = #{id}
    </update>
    
    <delete id="deleteHoused" parameterType="int">
        DELETE FROM housed WHERE id= #{id}
    </delete>
    
</mapper>